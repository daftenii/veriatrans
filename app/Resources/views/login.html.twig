<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Veriatrans</title>
    <meta name="description" content="description">
    <meta name="author" content="Dorin Aftenii">
    <meta name="keyword" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {% include 'styles.html.twig' %}
{#
    <link href="../plugins/bootstrap/bootstrap.css" rel="stylesheet">
    <link href="http://netdna.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Righteous' rel='stylesheet' type='text/css'>
    <link href="../css/style_v2.css" rel="stylesheet">
#}
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="http://getbootstrap.com/docs-assets/js/html5shiv.js"></script>
    <script src="http://getbootstrap.com/docs-assets/js/respond.min.js"></script>
    <![endif]-->
</head>
<body>
<div class="container-fluid">
    <div id="page-login" class="row">
        <div class="col-xs-12 col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
            <form action="{{ path('login_check') }}" method="post" class="form-signin">
                <div class="box">
                    <div class="box-content">
                        <div class="text-center">
                            <h3 class="page-header">Veriatrans</h3>
                        </div>
                        {% if error %}
                            <p class="bg-danger">{{ error.message|trans }}</p>
                        {% endif %}
                        <div class="form-group">
                            <label class="control-label">{{ 'user'|trans }}</label>
                            <input type="text" class="form-control" name="_username" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">{{ 'password'|trans }}</label>
                            <input type="password" class="form-control" name="_password" />
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-large btn-primary">{{ 'login'|trans }}</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
</body>
</html>
